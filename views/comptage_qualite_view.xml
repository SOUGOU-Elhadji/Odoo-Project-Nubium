                                    <h2>
                                    <label for="name" string="Gestion Comptage"/>
                                    </h2>
                                    <h2>
                                        <field name="name" class="oe_inline" placeholder="Nom"/>
                                    </h2>
                                </div>
                            </div>
                            <group>
				                <field name="test"/>
                            </group>
                            <hr></hr>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

         <!--CREATION VUE LISTE TREE-->

        <record id="comptage_qualite_tree" model="ir.ui.view">
